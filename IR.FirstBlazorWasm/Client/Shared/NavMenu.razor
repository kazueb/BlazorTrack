<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Multiproduct Planner</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/hello" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/hello/mika" Match="NavLinkMatch.Prefix">
                <span class="oi oi-home" aria-hidden="true"></span> Mika's home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="members">
                <span class="oi oi-person" aria-hidden="true"></span> Members
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="plannings">
                <span class="oi oi-calendar" aria-hidden="true"></span> Plannings
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="projects">
                <span class="oi oi-project" aria-hidden="true"></span> Projects
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="teams">
                <span class="oi oi-people" aria-hidden="true"></span> Teams
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
